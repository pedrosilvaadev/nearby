{
  "compilerOptions": {
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/types/env.d.ts"
  ]
}